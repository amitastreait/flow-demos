    <isExposed>true</isExposed>
    <masterLabel>Rich Text Area Component</masterLabel>
    <description>Rich Text Area Component</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <!-- Configuring the design attributes -->
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="placeholder" type="String" label="Enter the Placeholder"/>
